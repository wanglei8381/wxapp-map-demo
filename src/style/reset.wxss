view,
view::before,
view::after,
scroll-view,
swiper,
movable-area,
cover-view,
icon,
text,
rich-text,
progress,
button,
checkbox-group,
form,
input,
label,
picker,
picker-view,
radio-group,
radio,
slider,
switch,
textarea,
navigator,
audio,
image,
video,
map,
canvas,
open-data,
contact-button {
  box-sizing: border-box;
}

page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB', Roboto, Arial, 'Microsoft YaHei', sans-serif;
}
